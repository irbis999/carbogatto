section.main.support
  ::placeholder
    color #080808
    opacity 1
  ::-ms-input-placeholder
    color #080808
    opacity 1
  .page-title
    font-size 2em
    text-transform uppercase
    text-align center
    margin .3em 0 .7em 0
    font-weight 300
    &.__left
      text-align left
  .search-form
    text-align center
    margin-bottom 1em
    &.__left
      margin-bottom 2em
      .query
        margin-left 0
    .query
      border 1px solid #F5F5F5
      border-radius 0
      width 12em
      display block
      margin 0 auto 1em auto
      font-size 1.3em
      padding .3em .8em .3em 25px
      outline none
      background image-url('svg-sprite/search.svg') no-repeat 4px 4px / 14px
  .faq-button-container
    margin-bottom 2em
    text-align center
    .button-component
      padding-left 2.5em
      padding-right @padding-left
  .block-title
    text-transform uppercase
    padding-bottom .5em
    margin-bottom 1em
    border-bottom 1px solid color-blue
    font-weight bold
    color #080808
    em
      font-style normal
      margin 0 .4em
      font-weight normal
    span
      font-weight normal
      text-transform none
  .row
    @extend .clearfix
    border-bottom 1px solid lighten(#b7b7b7, 70%)
    padding-bottom 1em
    margin-bottom 1em
    &:hover
      .desc
        color black
    .title
      margin-right 5em
      margin-bottom .2em
      span
        background #AFF1FF
        padding .2em .3em
      a
        color black
        font-weight bold
        display inline-block
        &:hover
          color color-blue
    .desc
      margin-right 10em
      color #ABABAB
      font-size .7em
    .num
      float right
      background color-blue
      color white
      padding .4em 0
      position relative
      width 3.2em
      text-align center
      font-size .6em
      margin-top .5em
      &::after
        content ''
        display inline-block
        position absolute
        width 0
        height 0
        border 4px solid transparent
        border-top-color color-blue
        top 100%
        left 3px
        transform rotate(-90deg)
        margin -4px 0 0 0
      &.__grey
        background #d0d0d0
        &::after
          border-top-color #d0d0d0
  .col
    margin-bottom 4em

  @media (min-width mup)
    padding-top .5em
    .page-title
      font-size 2.45em
      margin-bottom .7em
      &.__left
        float left
        margin 4rem 0 3rem 0
    .search-form
      margin-bottom 3.5em
      &.__left
        float right
        margin 4rem 0 3rem 0
      .query
        font-size 1.16em
        padding .4em 1em .4em 40px
        border-width 1.5px
        background-position 7px 7px
        background-size 24px
        width 250px
        box-sizing border-box
    .faq-button-container
      .button-component
        font-size 1.16em
        padding .3em 2.3em
    .block-title
      font-size 1.16em
      margin-bottom .8em
      border-bottom-width 2px
    .row
      padding-bottom .8em
      margin-bottom .8em
      .title
        font-size 1.16em
        float left
        margin 5px 0 0 0
        width calc(100% - 300px)
      .desc
        text-align right
        margin 5px 1em 0 0
        float right
        width 240px
        font-size .77em
      .num
        font-size .65em
        padding .2em 0
        &::after
          left 4px
          border-width 7px
          margin-top -8px
    .col.__left, .col.__right
      float left
      width 47%
      .title
        float none
        width auto
    .col.__right
      float right


