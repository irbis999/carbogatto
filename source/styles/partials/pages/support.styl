section.main.support
  ::placeholder
    color #080808
    opacity 1
  ::-ms-input-placeholder
    color #080808
    opacity 1
  .page-title
    font-size 2em
    text-transform uppercase
    text-align center
    margin .3em 0 1em 0
    font-weight 300
  .search-form
    text-align center
    margin-bottom 2em
    .query
      text-transform uppercase
      border 1px solid color-blue
      border-radius 0
      width 12em
      display block
      margin 0 auto 1em auto
      font-size 1.3em
      padding .3em .8em .3em 23px
      outline none
      background image-url('svg-sprite/search.svg') no-repeat 3px 3px / 15px
    .button-component
      padding-left 2.5em
      padding-right @padding-left
      outline none
  .block-title
    text-transform uppercase
    padding-bottom .5em
    margin-bottom 1em
    border-bottom 1px solid #b7b7b7
    font-weight bold
    color #080808
  .row
    @extend .clearfix
    border-bottom 1px solid lighten(#b7b7b7, 70%)
    padding-bottom 1em
    margin-bottom 1em
    .title
      margin-right 9em
      margin-bottom .2em
      color black
      display inline-block
    .desc
      margin-right 10em
      color #8a8a8a
    .num
      float right
      background color-blue
      color white
      padding .4em 0
      position relative
      width 2.7em
      text-align center
      &::after
        content ''
        display inline-block
        position absolute
        width 0
        height 0
        border 4px solid transparent
        border-top-color color-blue
        top 100%
        left 3px
        transform rotate(-90deg)
        margin -4px 0 0 0
      &.__grey
        background #d0d0d0
        &::after
          border-top-color #d0d0d0
  .recent
    margin-bottom 2.5em
  .upgrade
    margin-bottom 2.5em
  .repairs
    margin-bottom 2.5em
  .partners-block
    padding 1em 0 2em
    background color-blue
    [type='text'], [type='email'], [type='tel'], textarea
      text-transform uppercase
      outline none
      border-radius 0
      padding .3em 1em
      box-sizing border-box
      width 100%
      margin-bottom 1em
      font-size 1.1em
      border none
    textarea
      height 7em
    .button-component
      background black
      border-color black

  @media (min-width mup)
    padding-top .5em
    .page-title
      font-size 1.92em
      margin-bottom .7em
    .search-form
      margin-bottom 3.5em
      .query
        font-size .96em
        padding .4em 1em .4em 40px
        border-width 1.5px
        background-position 7px 5px
        background-size 22px
        width 14em
      .button-component
        font-size .92em
        padding .7em 2.7em
    .block-title
      font-size .92em
      margin-bottom .8em
    .row
      padding-bottom .8em
      margin-bottom .8em
      .title
        font-size .92em
        float left
        margin 5px 25em 0 0
      .desc
        text-align right
        width 20em
        margin 5px 1em 0 0
        float right
        font-size .81em
      .num
        font-size .92em
        padding .2em 0
        &::after
          left 4px
          border-width 7px
          margin-top -8px
    .upgrade
      float left
      width 47%
      .title
        float none
        margin-right 0
    .repairs
      float right
      width 47%
      .title
        float none
        margin-right 0
    .partners-block
      padding 2.5em 0 4em 0
      [type='text'], [type='email'], [type='tel']
        float left
        width 32%
        margin-right 2%
        padding .8em 1em
        font-size .92em
        margin-bottom 1.2em
        &.__last
          margin-right 0
      textarea
        clear both
        padding .5em 1em
        height 9em
        font-size .92em
      .button-component
        font-size .92em
        padding .7em 2em
        outline none
