@import "mixins.styl"

section.main.index
  .tyres-block
    background black no-repeat image-url('pages/index/tyres-bg.jpg') 50% 40px / 160px
    padding-bottom 4em
    container-styles()
    .logos
      width 225px
      margin 0 auto 2em auto
      display block
      opacity 0
    .title
      margin-bottom 140px

    @media (min-width mup)
      background-size auto
      background-position 50% 100px
      padding-bottom 5em
      margin-bottom -1px
      .logos
        width auto
      .title
        margin-bottom 300px