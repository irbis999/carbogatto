@import "mixins.styl"

section.main.index
  .top-block
    background black no-repeat image-url('pages/index/top-bg.jpg') 50% -6px / 320px
    padding-top 185px
    .video-block
      display none
    @media (min-width mup)
      mup-video-block()
      padding-top 0
      .video-block
        display block
        position relative
        video
          background black
          width 100%
          position relative
          display block
          z-index -1
      .bottom-line
        position absolute
        left 0
        bottom 0
        height 25px
        width 100%
        background linear-gradient(to bottom, rgba(black, .01), rgba(black, 1) 50%, rgba(black, 1))
