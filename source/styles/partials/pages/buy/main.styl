section.main.buy
  .top-block
    background black
    color white
    padding 2em 0 0 0
    position relative
    overflow hidden
    .title
      text-transform uppercase
      font-size 2em
      text-align center
      font-weight 300
      margin 0 auto 1em auto
      letter-spacing .1em
      width 10em
    .bike
      display block
      width 260px
      margin 0 auto 30px auto
      position relative
    .params
      margin-bottom 1.3em
      position relative
      table
        border-collapse collapse
        font-size .8em
        margin-bottom 2em
        td
          border-top 1px solid darken(color-blue, 50%)
          border-bottom 1px solid darken(color-blue, 50%)
          padding .5em
          text-align right
          &:first-of-type
            color #787878
            span
              text-transform uppercase
              &::after
                content ' '
            em
              font-style normal
          &:last-of-type
            padding-right 0
      .button
        position relative
        text-align center
      .button-component
        margin-bottom 0
        padding-left 2.5em
        padding-right @padding-left
  .total-block
    position sticky
    top -1px
    z-index 2
    color white
    background #171717
    @extend .clearfix
    text-transform uppercase
    padding 1.5em 0
    font-size .9em
    margin-bottom 1em
    small
      font-size 1em
      float left
      color #787878
    em
      font-style normal
      float right
      i
        font-style normal
        margin-right .7em
      b
        color color-blue
        span:first-of-type
          &::after
            content ' '
  .block-title
    text-transform uppercase
    padding-bottom .5em
    margin-bottom 1em
    border-bottom 1px solid #b7b7b7
    font-weight bold
    color #080808
    font-size 1.33em
  .color-block
    margin-bottom 3em
    border-bottom 1px solid lighten(#b7b7b7, 50%)
    padding-bottom 1.5em
    .items
      text-align center
      display flex
      justify-content space-between
      margin-top 2em
      .item
        position relative
        cursor pointer
        display inline-block
        &:nth-of-type(even)
          margin-top 45px
        input[type=radio]
          position absolute
          left 7px
          top -15px
          opacity .01
        .hex, .hex-checked
          width 42px
          height @width
        .hex + .hex-checked
          display none
        .check
          display none
          position absolute
          left 11px
          top 10px
          width 20px
          height @width
          background image-url('svg-sprite/check.svg') no-repeat left top / contain
        input[type=radio]:checked + .hex
          display none
        input[type=radio]:checked + .hex + .hex-checked
          display inline-block
        input[type=radio]:checked + .hex + .hex-checked + .check
          display block
  .options-block
    .option
      margin-bottom 3.5em
      .row
        @extend .clearfix
        border-bottom 1px solid lighten(#b7b7b7, 70%)
        padding-bottom 1em
        margin-bottom 1em
        font-size 1.33em
        .title
          margin-right 9em
          margin-bottom .2em
        .desc
          margin-right 10em
          color #8a8a8a
        .price
          display none
        .button
          float right
          text-align center
          position relative
          input[type=radio]
            position absolute
            left 0
            top 0
            opacity .01
          .button-component
            width 5em
            font-size 1rem
          .button-component.__unselect
            display none
          input[type=radio]:checked + .button-component.__select
            display none
          input[type=radio]:checked + .button-component.__select + .button-component.__unselect
            display inline-block

  @media (min-width mup)
    .top-block
      padding-top 3em
      .site-container
        position relative
        background  image-url('pages/buy/bg.png') no-repeat -15px 100%
      .title
        font-size 2.3em
        width auto
        margin-bottom 200px
      .bike
        width auto
        position absolute
        left 30px
        top 120px
      .params
        @extend .clearfix
        margin-bottom 3.5em
        table
          float right
        table
          margin-bottom 4em
        .button
          clear both
          text-align right
    .total-block
      margin-bottom 3em
      font-size 1.45em
      padding .8em 0
    .block-title
      font-size 1.2em
    .color-block
      .items
        .item
          &:nth-of-type(even)
            margin-top 0
          .hex, .hex-checked
            width 80px
            height 93px
          .check
            width 40px
            height @width
            left 23px
            top 25px
    .options-block
      .option
        .row
          font-size 1em
          .title
            font-size 1.2em
            margin-right 0
            float left
            width 33%
            padding-top .7em
          .desc
            font-size 1.2em
            float left
            width 35%
            margin-right 0
            padding-top .7em
          .price
            font-size 1.2em
            float right
            width 12%
            color color-blue
            display block
            padding-top .7em
            font-weight bold
          .button
            .button-component
              font-size 1.2em